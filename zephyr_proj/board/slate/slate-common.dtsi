uart5: uart@9308000 {
	compatible = "arm,cmsdk-uart";
	status = "disabled";
	reg = <0x9308000 0x1000>;
	interrupt-names = "tx", "rx";
	interrupts = <126 3 125 3>;
	clocks = <&sysclk>;
	current-speed = <115200>;
