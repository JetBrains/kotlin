gpio_led0: mps3_fpgaio@9302000 {
	compatible = "arm,mps3-fpgaio-gpio";

	reg = <0x9302000 0x4>;
	gpio-controller;
	#gpio-cells = <1>;
	ngpios = <8>;
	label = "FPGA_LED0";
};

gpio_button: mps3_fpgaio@9302008 {
	compatible = "arm,mps3-fpgaio-gpio";

	reg = <0x9302008 0x4>;
	gpio-controller;
	#gpio-cells = <1>;
	ngpios = <2>;
	label = "FPGA_BUTTON";
};

gpio_misc: mps3_fpgaio@930204c {
	compatible = "arm,mps3-fpgaio-gpio";

	reg = <0x930204c 0x4>;
	gpio-controller;
	#gpio-cells = <1>;
	ngpios = <3>;
	label = "FPGA_MISC";
};

uart0: uart@9303000 {
	compatible = "arm,cmsdk-uart";
	reg = <0x9303000 0x1000>;
	interrupts = <34 3 33 3>;
	interrupt-names = "tx", "rx";
	clocks = <&sysclk>;
	current-speed = <115200>;
	label = "UART_0";
};

uart1: uart@9304000 {
	compatible = "arm,cmsdk-uart";
	reg = <0x9304000 0x1000>;
	interrupts = <36 3 35 3>;
	interrupt-names = "tx", "rx";
	clocks = <&sysclk>;
	current-speed = <115200>;
	label = "UART_1";
};

